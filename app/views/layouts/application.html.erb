<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/1fb06ac57c.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <body>
      <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="<%= root_path %>"><span>Bookers</span></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                    aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav ml-auto">
                        <% if user_signed_in? %>
                          <li>
                              <%= link_to user_path(current_user), class:"nav-link text-light" do %>
                                  <i class="fas fa-home" aria-hidden="true"></i> Home
                              <% end %>
                          </li>
                        <% else %>
                          <li>
                            <%= link_to root_path, class:"nav-link text-light" do %>
                              <i class="fas fa-home" aria-hidden="true"></i> Home
                            <% end %>
                          </li>
                        <% end %>
                        <% if user_signed_in? %>
                          <li>
                              <%= link_to users_path, class:"nav-link text-light" do %>
                                  <i class="fas fa-users" aria-hidden="true"></i> Users
                              <% end %>
                          </li>
                        <% else %>
                          <li>
                            <%= link_to about_path, class:"nav-link text-light" do %>
                              <i class="fas fa-link" aria-hidden="true"></i> About
                            <% end %>
                          </li>
                        <% end %>

                        <% if user_signed_in? %>
                          <li>
                            <%= link_to books_path, class:"nav-link text-light" do %>
                              <i class="fas fa-book-open" aria-hidden="true"></i> Books
                            <% end %>
                          </li>
                        <% else %>
                          <li>
                            <%= link_to new_user_registration_path, class:"nav-link text-light" do %>
                              <i class="fas fa-user-plus" aria-hidden="true"></i> Sign up
                            <% end %>
                          </li>
                        <% end %>

                        <% if user_signed_in? %>
                          <li>
                              <%= link_to destroy_user_session_path, class:"nav-link text-light", data: { method: :delete } do %>
                                  <i class="fas fa-sign-out-alt" aria-hidden="true"></i> Log out
                              <% end %>
                          </li>
                        <% else %>
                          <li>
                            <%= link_to new_user_session_path, class:"nav-link text-light" do %>
                              <i class="fas fa-sign-in-alt" aria-hidden="true"></i> Log in
                            <% end %>
                          </li>
                        <% end %>
                    </ul>
                </div>
            </div>
        </nav>
            </div>
            </div>
            </navbar>
          </header>
    <%= yield %>
    <footer>
  <div class="container mt-5">
  	<div class="row">
    	<div class="mx-auto">
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
</footer>
  </body>
</html>
