<div class="contaoner px-5 px-sm-0">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <%= render 'bookers', books: @book, user: @user %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-striped">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      
      <tbody>
          <% @books.each do |book| %>
          <tr>
              <td><p><%= link_to book_path(book.id) do %></p></td>
              <td><p><%= image_tag book.user.get_profile_image(100,100) %></p></td>
              <td><p><%= book.title %></p></td>
              <% end %>
              <td><p><%= book.body %></p></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>