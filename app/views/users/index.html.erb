<div class="container px-sm-0">
    <div class="row">
        <div class="col-md-8 offset-md-1">
            <%= render 'books/bookers', book: @book ,user: @user%>
        </div>

        <div class="col-md-8 offset-md-1">
            <h2>Users</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>image</th>
                        <th>name</th>
                        <th colspan="3"></th>
                    </tr>
                </thead>

                <tbody>
                    <%= @users.each do |user| %>
                    <tr>
                        <td><p><%= image_tag user.get_profile_image(100,100) %></p></td>
                        <td><p><%= user.name %></p></td>
                        <td><p><%= link_to  "Show",user_path(@user) %></p></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>

